<configuration>
    <!-- Console appender -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File appender for pipeline logs -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/pipeline.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Daily rollover -->
            <fileNamePattern>logs/pipeline.%d{yyyy-MM-dd}.log</fileNamePattern>
            <!-- Keep 30 days of history -->
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Set log levels for specific packages -->

    <!-- Apache HTTP Client - too verbose -->
    <logger name="org.apache.http" level="WARN"/>
    <logger name="org.apache.http.wire" level="WARN"/>
    <logger name="org.apache.http.headers" level="WARN"/>

    <!-- Cassandra driver -->
    <logger name="com.datastax" level="WARN"/>
    <logger name="com.datastax.oss.driver" level="WARN"/>

    <!-- Netty (used by Cassandra driver) -->
    <logger name="io.netty" level="WARN"/>

    <!-- Clojure HTTP client -->
    <logger name="clj-http" level="INFO"/>

    <!-- Your application loggers -->
    <logger name="gm.source" level="INFO"/>
    <logger name="gm.sink" level="INFO"/>
    <logger name="gm.pipeline" level="INFO"/>
    <logger name="pipeline" level="INFO"/>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FILE"/>
    </root>
</configuration>